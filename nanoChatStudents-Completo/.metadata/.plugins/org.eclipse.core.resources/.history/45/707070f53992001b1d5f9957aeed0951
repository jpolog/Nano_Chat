package es.um.redes.nanoChat.messageML;

public class RoomRequest extends NCMessage{

	private static final byte OPCODE = 4;
	private String room;
	
	private static final String RE_ROOM = "<room>(.*?)</room>";
	private static final String ROOM_MARK = "room";
	
	public RoomRequest(String room) {
		this.opcode = OPCODE;
		this.room = room;
	}
	
	
	@Override
	protected String toEncodedString() {
		StringBuffer sb = new StringBuffer();
		
		sb.append("<"+MESSAGE_MARK+">");
		sb.append("<"+OPERATION_MARK+">"+this.opcode+"</"+OPERATION_MARK+">");
		sb.append("<"+ROOM_MARK+">"+this.room+"</"+ROOM_MARK+">");
		sb.append("</"+MESSAGE_MARK+">");
		
		String message = sb.toString();
		return message;
	}
	
	public static DuplicatedNick readFromString(String message) {
		return new DuplicatedNick();
	}
	
}
