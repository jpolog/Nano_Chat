package es.um.redes.nanoChat.messageML;

public class RegisterNick extends NCMessage{

	@Override
	protected String toEncodedString() {
		final char IZQ = '<';
		final char DER = '>';
		final char FIN = '/';
		StringBuffer sb = new StringBuffer();
		String msg = "message";
		String op = "operation";
		String nk = "nick";
		char valOp = '1';
		String valNk = "nick_name";
		
		sb.append(IZQ+msg+DER);
		sb.append(IZQ+op+DER+valOp+IZQ+FIN+op+DER);
		sb.append(IZQ+nk+DER+valNk+IZQ+FIN+nk+DER);
		String message = sb.toString();
		return message;
	}

}
